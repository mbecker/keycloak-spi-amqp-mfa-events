            <column name="UUID" type="CHAR(36)">
                <constraints nullable="false"/>
            </column>

            <column name="TTL" type="INT">
                <constraints nullable="false"/>
            </column>
            
            <column name="CREATEDAT" type="INT">
                <constraints nullable="false"/>
            </column>

            <column name="REALM_ID" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
        </createTable>

    </changeSet>

